{
  "manifest_version": 3,
  "name": "Posture & Eye Care Monitor",
  "version": "1.3",
  "description": "Monitors your sitting posture and reminds you to follow the 20-20-20 eye strain rule.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Posture Monitor"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
